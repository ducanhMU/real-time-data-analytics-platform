{
  "tableName": "gold_effective_unit_strength",
  "tableType": "REALTIME",
  "segmentsConfig": {
    "timeColumnName": "timestamp",
    "timeType": "MILLISECONDS",
    "retentionTimeUnit": "DAYS",
    "retentionTimeValue": "30",
    "segmentPushType": "APPEND",
    "segmentAssignmentStrategy": "BalanceNumSegmentAssignmentStrategy",
    "replicasPerPartition": "1"
  },
  "tableIndexConfig": {
    "loadMode": "MMAP",
    "realtime.segment.flush.threshold.rows": "100000",
    "streamConfigs": {
      "streamType": "kafka",
      "stream.kafka.topic.name": "gold.effective_unit_strength",
      "stream.kafka.bootstrap.servers": "kafka:9092",
      "stream.kafka.consumer.prop.auto.offset.reset": "smallest",
      "stream.kafka.decoder.class.name": "org.apache.pinot.plugin.stream.kafka20.KafkaJSONMessageDecoder"
    },

    "invertedIndexColumns": ["unit_id", "region_id", "weapon_id"],
    "sortedColumn": "timestamp",
    "rangeIndexColumns": ["effective_range_km", "attacking_strength", "adjusted_hit_probability", "terrain_factor"],
    "textIndexColumns": []
  },
  "ingestionConfig": {
    "transformConfigs": [
      {"columnName": "unit_id", "transformFunction": "jsonPathString(message, '$.unit_id')"},
      {"columnName": "region_id", "transformFunction": "jsonPathString(message, '$.region_id')"},
      {"columnName": "weapon_id", "transformFunction": "jsonPathString(message, '$.weapon_id')"},
      {"columnName": "terrain_factor", "transformFunction": "jsonPathDouble(message, '$.terrain_factor')"},
      {"columnName": "effective_range_km", "transformFunction": "jsonPathDouble(message, '$.effective_range_km')"},
      {"columnName": "adjusted_hit_probability", "transformFunction": "jsonPathDouble(message, '$.adjusted_hit_probability')"},
      {"columnName": "attacking_strength", "transformFunction": "jsonPathDouble(message, '$.attacking_strength')"},
      {"columnName": "timestamp", "transformFunction": "jsonPathLong(message, '$.timestamp')"}
    ]
  }
}
