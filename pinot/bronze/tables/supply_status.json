{
  "tableName": "supply_status_cdc",
  "tableType": "REALTIME",
  "segmentsConfig": {
    "timeColumnName": "event_time",
    "timeType": "MILLISECONDS",
    "schemaName": "supply_status_cdc",
    "retentionTimeUnit": "DAYS",
    "retentionTimeValue": "30",
    "segmentPushType": "APPEND",
    "segmentAssignmentStrategy": "BalanceNumSegmentAssignmentStrategy",
    "replicasPerPartition": "1"
  },
  "tenants": {
    "broker": "DefaultTenant",
    "server": "DefaultTenant"
  },
  "tableIndexConfig": {
    "loadMode": "MMAP"
  },
  "ingestionConfig": {
    "streamIngestionConfig": {
      "streamConfigMaps": [{  
        "streamType": "kafka",  
        "stream.kafka.topic.name": "jadc2.raw.supply_status",  
        "stream.kafka.broker.list": "kafka:9092",  
        "stream.kafka.consumer.factory.class.name": "org.apache.pinot.plugin.stream.kafka20.KafkaConsumerFactory",  
        "stream.kafka.consumer.prop.auto.offset.reset": "smallest",  
        "stream.kafka.consumer.type": "lowLevel",  
        "stream.kafka.consumer.group.id": "pinot",  
        "stream.kafka.decoder.class.name": "org.apache.pinot.plugin.inputformat.json.JSONMessageDecoder",  
        "realtime.segment.flush.threshold.segment.rows": "500000",  
        "realtime.segment.flush.threshold.time": "3600000"  
      }]  
    },
    "transformConfigs": [
      {
        "columnName": "id",
        "transformFunction": "JSONPATHSTRING(after, '$.id')"
      },
  
      {
        "columnName": "unit_id",
        "transformFunction": "JSONPATHSTRING(after, '$.unit_id')"
      },
      {
        "columnName": "region_id",
        "transformFunction": "JSONPATHSTRING(after, '$.region_id')"
      },
     
      {
        "columnName": "src",
        "transformFunction": "JSONPATHSTRING(after, '$.src')"
      },
      {
        "columnName": "supply_level",
        "transformFunction": "JSONPATHSTRING(after, '$.supply_level')"
      },
      {
        "columnName": "event_time",
        "transformFunction": "DATETIMECONVERT(JSONPATHSTRING(after, '$.event_time'), '1:MILLISECONDS:SIMPLE_DATE_FORMAT:yyyy-MM-dd''T''HH:mm:ss.SSSSSS''Z''', '1:MILLISECONDS:EPOCH', '1:MILLISECONDS')"
      },
      {
        "columnName": "ingest_timestamp",
        "transformFunction": "DATETIMECONVERT(JSONPATHSTRING(after, '$.ingest_timestamp'), '1:MILLISECONDS:SIMPLE_DATE_FORMAT:yyyy-MM-dd''T''HH:mm:ss.SSSSSS''Z''', '1:MILLISECONDS:EPOCH', '1:MILLISECONDS')"
      }
    ]
  },
  "metadata": {
    "customConfigs": {}
  }
}
